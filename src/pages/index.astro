<style>
  :root {
    --font-main: 'Varela Round', sans-serif;
    /* Cores do seu design */
    --bg-color: #FFF9C4; /* Amarelo creme do fundo */
    --nav-gradient: linear-gradient(90deg, #FFD180 0%, #FFAB40 100%); /* Laranja do topo */
  }

  body {
    margin: 0;
    font-family: var(--font-main);
    background-color: var(--bg-color);
    color: #5A3E3E;
    overflow-x: hidden; /* Evita rolagem lateral */
  }

  /* --- NAVBAR --- */
  .navbar {
    background: var(--nav-gradient);
    padding: 1rem 2rem;
    box-shadow: 0 4px 10px rgba(0,0,0,0.05);
  }

  .nav-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-weight: 900;
    color: #00AEEF; /* Azul do logo Heartopia */
    font-size: 1.5rem;
    text-shadow: 2px 2px 0px white;
    letter-spacing: 1px;
  }

  .nav-links {
    display: flex;
    gap: 30px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    text-decoration: none;
    color: white;
    font-weight: bold;
    font-size: 1.1rem;
    text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
  }

  .btn-download {
    background: #FFD600;
    border: 2px solid white;
    padding: 8px 20px;
    border-radius: 20px;
    color: #9c6f00;
    font-weight: bold;
    cursor: pointer;
    box-shadow: 0 4px 0 rgba(0,0,0,0.1);
  }

  /* --- LAYOUT PRINCIPAL (GRID) --- */
  .main-container {
    max-width: 1100px;
    margin: 0 auto;
    min-height: calc(100vh - 80px); /* Altura total menos a navbar */
    display: grid;
    grid-template-columns: 1fr 1fr; /* Divide a tela no meio (50% / 50%) */
    align-items: center; /* Centraliza verticalmente */
    gap: 40px;
    padding: 20px;
  }

  /* Lado Esquerdo (Personagem) */
  .hero-character {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
  }

  .greeting-bubble h1 {
    font-family: 'Handwritten', cursive; /* Se quiser outra fonte depois */
    font-size: 3rem;
    transform: rotate(-5deg);
    margin-bottom: -20px;
    z-index: 2;
    color: #333;
  }

  .character-img {
    width: 100%;
    max-width: 450px;
    /* Anima√ß√£o suave de flutuar */
    animation: float 6s ease-in-out infinite;
  }

  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
    100% { transform: translateY(0px); }
  }

  /* Lado Direito (Celular) */
  .hero-interface {
    display: flex;
    justify-content: center;
  }

  .phone-card {
    background: white;
    width: 100%;
    max-width: 380px;
    border-radius: 30px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    overflow: hidden; /* Garante que nada saia das bordas redondas */
  }

  .phone-header {
    background: linear-gradient(180deg, #7B61FF 0%, #9D8CFF 100%);
    padding: 30px 25px;
    color: white;
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .avatar-circle img {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    border: 3px solid white;
  }

  .time {
    font-size: 2.5rem;
    font-weight: bold;
    line-height: 1;
  }

  .app-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px 10px;
    padding: 30px 20px;
  }

  .app-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: #666;
    font-size: 0.85rem;
    gap: 8px;
    transition: transform 0.2s;
  }

  .app-item:hover {
    transform: scale(1.1);
  }

  .app-icon {
    width: 55px;
    height: 55px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
  }

  /* Cores dos √çcones */
  .icon-blue { background: #E1F5FE; color: #0288D1; }
  .icon-pink { background: #FCE4EC; color: #E91E63; }
  .icon-orange { background: #FFF3E0; color: #EF6C00; }
  .icon-blue-light { background: #E3F2FD; color: #1976D2; }
  .icon-green { background: #E8F5E9; color: #388E3C; }
  .icon-pink-dark { background: #F3E5F5; color: #8E24AA; }

  /* Responsividade para Celular (Tela pequena) */
  @media (max-width: 768px) {
    .main-container {
      grid-template-columns: 1fr; /* Uma coluna s√≥ */
      text-align: center;
    }
    
    .hero-character {
      order: -1; /* Personagem primeiro */
    }
    
    .nav-links {
      display: none; /* Esconde menu no celular por enquanto */
    }
  }
</style>