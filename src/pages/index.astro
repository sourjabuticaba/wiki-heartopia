---
// src/pages/index.astro
// Puxando o celular da pasta components
import PhoneInterface from '../components/PhoneInterface.astro';
---

<html lang="pt-br">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Wiki Heartopia</title>
    <link href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap" rel="stylesheet">
  </head>
  <body>
    
    <nav class="navbar">
      <div class="nav-content">
        <div class="logo">HEARTOPIA</div>
        <ul class="nav-links">
          <li><a href="#" class="active">Início</a></li>
          <li><a href="#">Wiki</a></li>
          <li><a href="#">Mapas</a></li>
        </ul>
        <button class="btn-download">Jogar Agora</button>
      </div>
    </nav>

    <main class="main-container">
      <section class="hero-character">
        <div class="greeting-bubble">
          <h1>Olá, Babu!</h1>
        </div>
        <img src="https://placehold.co/400x600/png?text=Seu+Personagem" class="character-img" />
      </section>

      <section class="hero-interface">
        <PhoneInterface />
      </section>
    </main>

  </body>
</html>

<style>
  /* CSS DA PÁGINA */
  :root {
    --font-main: 'Varela Round', sans-serif;
    --bg-color: #FFF9C4; 
    --nav-gradient: linear-gradient(90deg, #FFD180 0%, #FFAB40 100%);
  }

  body {
    margin: 0;
    font-family: var(--font-main);
    background-color: var(--bg-color);
    color: #5A3E3E;
    overflow-x: hidden;
  }

  .navbar { background: var(--nav-gradient); padding: 1rem 2rem; box-shadow: 0 4px 10px rgba(0,0,0,0.05); }
  .nav-content { max-width: 1200px; margin: 0 auto; display: flex; justify-content: space-between; align-items: center; }
  .logo { font-weight: 900; color: #00AEEF; font-size: 1.5rem; text-shadow: 2px 2px 0px white; }
  .nav-links { display: flex; gap: 30px; list-style: none; }
  .nav-links a { text-decoration: none; color: white; font-weight: bold; }
  .btn-download { background: #FFD600; border: 2px solid white; padding: 8px 20px; border-radius: 20px; color: #9c6f00; font-weight: bold; cursor: pointer; }

  .main-container {
    max-width: 1100px;
    margin: 0 auto;
    min-height: calc(100vh - 80px);
    display: grid;
    grid-template-columns: 1fr 1fr; /* Divide a tela no meio */
    align-items: center;
    gap: 40px;
    padding: 20px;
  }

  .hero-character { display: flex; flex-direction: column; align-items: center; }
  .greeting-bubble h1 { font-size: 3rem; transform: rotate(-5deg); margin-bottom: -20px; z-index: 2; color: #333; }
  .character-img { width: 100%; max-width: 450px; animation: float 6s ease-in-out infinite; }
  
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
  }

  @media (max-width: 768px) {
    .main-container { grid-template-columns: 1fr; text-align: center; }
    .hero-character { order: -1; }
    .nav-links { display: none; }
  }

  .icon-img {
    width: 70%; 
    height: auto;
  }
</style>