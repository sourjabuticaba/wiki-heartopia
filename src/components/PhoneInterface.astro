<style>
  /* CSS DO CELULAR */
  .phone-card {
    background: white;
    width: 100%;
    max-width: 440px;
    height: 580px;
    border-radius: 50px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    overflow: hidden;
    font-family: 'Varela Round', sans-serif;
    position: relative;
    border: 8px solid white;
    display: flex;
    flex-direction: column;
  }

  .phone-header {
    background: linear-gradient(180deg, #5e50ff 0%, #8b80ff 100%);
    padding: 25px 25px 20px 25px;
    color: white;
    border-radius: 35px 35px 0 0;
    flex-shrink: 0;
    z-index: 10;
  }

  .header-top { display: flex; align-items: center; gap: 15px; }
  .avatar-circle img { width: 65px; height: 65px; border-radius: 50%; border: 3px solid #ffaa00; background: #fff; }
  .time { font-size: 3rem; font-weight: 800; line-height: 1; }

  /* SCROLL */
  .app-scroll-container {
    flex-grow: 1;
    overflow-y: auto;
    scrollbar-width: none;
    -ms-overflow-style: none;
    mask-image: linear-gradient(to bottom, transparent, black 10px, black 95%, transparent);
    -webkit-mask-image: linear-gradient(to bottom, transparent, black 10px, black 95%, transparent);
  }
  .app-scroll-container::-webkit-scrollbar { display: none; }

  .app-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 25px 15px;
    padding: 30px;
    padding-bottom: 60px;
  }

  .app-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: #777;
    font-size: 0.85rem;
    font-weight: bold;
    gap: 8px;
    transition: transform 0.2s;
  }
  .app-item:hover { transform: scale(1.05); }

  .app-icon {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.6rem;
    box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    /* Adicionei overflow hidden para garantir que o print n√£o vaze nas bordas */
    overflow: hidden; 
  }

  /* CLASSE M√ÅGICA PARA SEUS PRINTS */
  .icon-img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Recorta e preenche a bolinha */
    display: block;
  }

  .scroll-indicator { text-align: center; color: #ddd; font-weight: bold; padding: 10px; background: white; z-index: 10; }

  /* CORES DE FUNDO (Aparecem atr√°s do √≠cone se a imagem falhar ou tiver transpar√™ncia) */
  .icon-blue { background: #d0f0fd; }
  .icon-pink { background: #fce4ec; }
  .icon-orange { background: #ffe0b2; }
  .icon-blue-light { background: #e3f2fd; }
  .icon-green { background: #e8f5e9; }
  .icon-pink-dark { background: #f8bbd0; }
  .icon-salmon { background: #ffccbc; }
  .icon-brown { background: #d7ccc8; }
  .icon-cyan { background: #b2ebf2; }
  .icon-purple { background: #e1bee7; }
  .icon-gray { background: #cfd8dc; }
  .icon-yellow { background: #fff9c4; }
</style>